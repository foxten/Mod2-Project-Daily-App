<!DOCTYPE html>
<html>
  <head>
    <title>Daily - Just Call It a Day</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= yield %>

    <% if @current_user %>
    <br><%= button_to "Back to My Profile", user_profile_path(@current_user.id), method: :get %>
    <%= button_to "Logout", logout_path, method: :delete %>
    <% end %>

  </body>
</html>
